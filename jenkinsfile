pipeline {
    agent { label 'docker-luqman' }
    
    tools {nodejs "Nodejs-18.16"}

    stages {
        stage('Checkout SCM') {
            steps {
                git branch: 'main', url: 'https://github.com/27luqmanhakim/simple-apps.git'
            }
        }
        stage('Build') {
            steps {
                sh '''npm install'''
            }
        }
        stage('Testing') {
            steps {
                sh '''npm test '''
            }
        }
        stage('Code Review with Sonarqube') {
            steps {
                sh '''sonar-scanner \
                -Dsonar.projectKey=simple-apps \
                -Dsonar.sources=. \
                -Dsonar.host.url=http://172.23.15.64:9000 \
                -Dsonar.login=squ_08b66c2ce598888d70d4735b314247f691cdc939'''
            }
        }
        stage('Deploy compose') {
            steps {
                sh '''
                docker compose down
                docker image prune
                docker compose build
                docker compose up -d
                '''
            }
        }
                }
        stage('Upload to registry image') {
            steps {
                sh '''
                docker tag simple-apps-apps 27luqmanhakim/simple-apps-apps:v1.0
                docker push 27luqmanhakim/simple-apps-apps:v1.0
                '''
            }
        }
    }
}